{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["DATABASE_URL","REDIS_HOST", "REDIS_PORT", "REDIS_PASSWORD", "JWT_SECRET"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },"db:generate": {
    "cache": false
  },
  "db:migrate": {
    "cache": false,
    "persistent": true 
  },
  "db:deploy": {
    "cache": false
  }
  }
}
